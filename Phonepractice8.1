using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace practice08task1
{
    public class Phone
    {
        public int Id { get; private set; }
        public string Model { get; set; }
        public string Brand { get; set; }
        private double price;

        public double Price
        {
            get { return price; }
            set
            {
                if (value < 100 || value > 6000)
                {
                    throw new ArgumentException("Error");
                }
                else
                { price = value; }
            }
        }
        public string operatingSystem { get; set; }
        public string OperatingSystem
        {
            get { return operatingSystem; }
            set
            {
                if (value.ToLower() == "android" || value.ToLower() == "ios")
                {
                    operatingSystem = value;
                }
                else
                {
                    throw new ArgumentException("Operating system must be Android or IOS.");
                }
            }
        }
        private int cameraMegaPixels;

        public int CameraMegaPixels
        {
            get { return cameraMegaPixels; }
            set
            {
                if (value < 4 || value > 128)
                {
                    throw new ArgumentException("Error");
                }
                else
                {
                    cameraMegaPixels = value;
                }
            }



        }
        public Phone(int Id, string model, string brand, double price, string operatingSystem, int cameraMegaPixels)
        {
            Id = Id;
            Model = model;
            Brand = brand;
            Price = price;
            OperatingSystem = operatingSystem;
            CameraMegaPixels = cameraMegaPixels;
            
        }
        public double CalcPriceWithTax()
        {

            double tax = 0.04;
            return Price * (1 + tax);
        }
        public void DisplayInfo()
        {
            Console.WriteLine($"Model: {Model}, Brand: {Brand}, Operating System: {OperatingSystem}, Camera MegaPixels: {CameraMegaPixels}");
        }
        public void CheckCamera()
        {
            if (CameraMegaPixels>=4 && CameraMegaPixels < 32)
            {
                Console.WriteLine("Normal");
            }
            else if(CameraMegaPixels>=32 && CameraMegaPixels<64)
            {
                Console.WriteLine("Yaxshi");
            }
            else if (CameraMegaPixels>=64)
            {
                Console.WriteLine("Ela");
            }
        }
    }
}


